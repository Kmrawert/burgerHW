<h1>Burgers!</h1>

<form class="create-form">

<h2>Available Burgers!</h2>
<div class="container">
<ul>
  {{#each burger}}
  <!-- unless = IF NOT -->
    {{#unless devoured}}
         {{> burgerBlock/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<h2>Devoured burgers</h2>

<div class="container">
<ul>
  {{#each burger}}
    {{#if devoured}}
      {{!-- {{this.burgerName}} --}}
      {{> burgerBlock/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burType">Type of Burger:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Add Burger!</button>
</form>
